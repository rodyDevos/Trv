<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:background="@drawable/background_low_right"
	android:orientation="vertical">

	<com.igames2go.t4f.view.CustomButton
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="right" android:layout_marginRight="10dip"
		android:layout_marginTop="5dip" android:onClick="onCancel"
		android:text="Cancel"
		android:textColor="@color/nav_bar_title_color"
		android:background="@color/nav_bar_background_color" />

	<View android:layout_width="1dip" android:layout_height="0dip"
		android:layout_weight="1" />

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:orientation="vertical">

		<com.igames2go.t4f.view.CustomImageView
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginLeft="30dip" android:background="@drawable/i_button_help_word"
			android:onClick="onHelpClick" />

		<ImageView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
			android:background="@drawable/meetcompetition_bar" />

		<LinearLayout android:id="@+id/container1"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal" android:gravity="fill"
			android:background="@drawable/meetcompetition_row" android:orientation="horizontal">
		</LinearLayout>

		<LinearLayout android:id="@+id/container2"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal" android:gravity="fill"
			android:background="@drawable/meetcompetition_row" android:orientation="horizontal">
		</LinearLayout>

		<LinearLayout android:id="@+id/container3"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal" android:gravity="fill"
		
			android:background="@drawable/meetcompetition_row_bottom" android:orientation="horizontal">
		</LinearLayout>

		<com.igames2go.t4f.view.CustomImageView
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal" android:padding="@dimen/padding_small"
			android:background="@drawable/start_game_button" android:onClick="startGame" />
	</LinearLayout>
	<View android:layout_width="1dip" android:layout_height="@dimen/activity_bottom_margin"
		 />
</LinearLayout>