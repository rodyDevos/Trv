<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.igames2go.t4f.view.CustomTextView
        android:id="@+id/fb_index"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/index_height"
        android:background="#555555"
        android:gravity="left|center_vertical"
        android:paddingLeft="5dip"
        android:singleLine="true"
        android:text="d"
        android:textColor="#ffffff"
        android:textSize="@dimen/textsize_mid"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/fb_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="onOptionButtonClick"
        android:paddingLeft="5dip" >

        <include layout="@layout/include_profile_image_frame" />

        <com.igames2go.t4f.view.CustomTextView
            android:id="@+id/fb_picker_title"
            android:layout_width="100dip"
            android:layout_height="@dimen/activity_bottom_margin"
            android:layout_weight="1.0"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/padding_small"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="@dimen/textsize_mid"
            android:textStyle="bold" />

        <com.igames2go.t4f.view.CustomImageButton
            android:id="@+id/fb_picker_opt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:background="@drawable/icon_additionsign"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </LinearLayout>

</LinearLayout>