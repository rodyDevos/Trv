<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:visibility="invisible"
    android:gravity="center_horizontal" 
    android:id="@+id/imageframe">

    <include layout="@layout/include_profile_image_frame" />

    <com.igames2go.t4f.view.CustomTextView
        android:id="@+id/tv_name" android:layout_marginTop="-3dip" 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:lines="1"
        android:paddingBottom="2dip"
        android:paddingTop="2dip"
        android:text=""
        android:textColor="@android:color/white"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:maxLength= "12"
        android:textSize = "@dimen/textsize_very_small" android:minWidth = "50dip"/>

</LinearLayout>