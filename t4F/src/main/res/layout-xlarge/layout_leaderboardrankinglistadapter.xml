<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="104dp"
    android:gravity="center_vertical"
    android:orientation="vertical" >
	
    <ImageView
	    android:id="@+id/seperateImageView"
	    android:layout_width="match_parent"
	    android:layout_height="4dp"
	    android:background="@android:color/black" >
	    
	</ImageView>
	
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="100dp"
	    android:gravity="center_vertical"
	    android:orientation="horizontal" >
	    <com.igames2go.t4f.view.CustomTextView
	        android:id="@+id/noLabel"
	        android:layout_width="80dp"
	        android:layout_height="80dp"
	        android:background="@android:color/transparent"
	        android:gravity="left|center_vertical"
	        android:paddingLeft="10dp"
	        android:textColor="#000000"
	        android:singleLine="true"
	        android:text="1"
	        android:textSize="26sp"/>
	
	    <com.igames2go.t4f.view.CustomProfileView
	        android:id="@+id/profileImageView"
	        android:layout_width="80dp"
	    	android:layout_height="80dp" 
	    />
	
		<com.igames2go.t4f.view.CustomTextView
	            android:id="@+id/nameLabel"
	            android:layout_width="0dp"
	            android:layout_height="80dp"
	            android:gravity="left|center_vertical"
	            android:paddingLeft="10dp"
	            android:lines="2"
	            android:textColor="#000000"
	            android:textSize="26sp"
	            android:textStyle="bold"
	            android:layout_weight="1" />
	
		<com.igames2go.t4f.view.CustomTextView
		    android:id="@+id/pointLabel"
		    android:layout_width="180dp"
		    android:layout_height="80dp"
		    android:gravity="right|center_vertical"
		    android:paddingLeft="10dp"
		    android:singleLine="true"
		    android:textColor="#000000"
		    android:textSize="26sp"
		    android:textStyle="bold" />
		
		<com.igames2go.t4f.view.CustomImageButton
		    android:id="@+id/statsButton"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:layout_marginRight="10dp"
		    android:background="@drawable/icon_stats"
		/>
	</LinearLayout>

</LinearLayout>