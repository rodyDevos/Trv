<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@drawable/background_low_right"
    android:gravity="center"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        layout="@layout/layout_resign_buttonpanel" />

    <View
        android:layout_width="1dip"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_share_report_help_panel" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/round_rect"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dip" android:padding="1dip" >

        <include layout="@layout/question_panel" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >
        <com.igames2go.t4f.view.CustomTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:text="@string/nopemsg"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/textsize_big"
            android:textStyle="bold" />

        <com.igames2go.t4f.view.CustomTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="2dip"
            android:text="@string/youselected"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_mid"
            android:textStyle="bold" />

        <!-- <include layout="@layout/layout_onwronganswer_wrongoptionbutton" /> -->

        <LinearLayout
            android:id="@+id/ll_incorrect"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dip"
            android:background="@drawable/button_a"
            android:gravity="center" >

            <com.igames2go.t4f.view.CustomButton
                android:id="@+id/btn_wrong_option"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="-42.34dip"
                android:background="#00ffffff"
                android:gravity="center"
                android:maxLines="1"
                android:text="Option A"
                android:textSize="@dimen/textsize_answer" />
        </LinearLayout>

        <com.igames2go.t4f.view.CustomTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:gravity="center"
            android:text="@string/betterchoicemsg"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_small"
            android:textStyle="bold" />

        <!--
             <include layout="@layout/layout_onwronganswer_correctoptionbutton" 
			/>
        -->

        <LinearLayout
            android:id="@+id/ll_correct"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dip"
            android:background="@drawable/button_a"
            android:gravity="center" >

            <com.igames2go.t4f.view.CustomButton
                android:id="@+id/btn_correct_option"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="-42.34dip"
                android:background="#00ffffff"
                android:gravity="center"
                android:maxLines="1"
                android:text="Option A"
                android:textSize="@dimen/textsize_answer" />
        </LinearLayout>

        <com.igames2go.t4f.view.CustomTextView
            android:id="@+id/tv_wrong_answer_label2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:maxLines="3"
            android:lines="3"
            android:text="@string/passedcategorymsg_wronganswerscreen"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/textsize_small"
            android:textStyle="bold" />
    </LinearLayout>
	</LinearLayout>
    <View
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_weight=".5" />

</LinearLayout><!-- From: file:/Volumes/MacWork/Bitbucket/t4fa_andstudio/T4Fa/t4F/src/main/res/layout/layout_onwronganswer.xml -->