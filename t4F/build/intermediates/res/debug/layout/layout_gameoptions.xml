<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/background_low_right"
	android:orientation="vertical" android:weightSum="800">

	<LinearLayout android:layout_width="wrap_content" android:layout_weight="210"
		android:layout_height="0dip" android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true" android:orientation="vertical">

		<Button android:id="@+id/btn_back" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginBottom="@dimen/padding_mid"
