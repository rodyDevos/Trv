			android:visibility="visible" />

		<LinearLayout android:id="@+id/players_container"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"  android:minHeight="@dimen/activity_bottom_margin"
