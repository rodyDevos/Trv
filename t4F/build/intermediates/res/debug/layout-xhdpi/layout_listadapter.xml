<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:onClick="onOptionButtonClick"
    android:paddingLeft="@dimen/padding_small" >

    <include layout="@layout/include_profile_image_frame" />

    <com.igames2go.t4f.view.CustomTextView
        android:id="@+id/fb_picker_title"
        android:layout_width="100dip"
        android:layout_height="@dimen/activity_bottom_margin"
        android:layout_weight="1.0"
        android:clickable="false"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/padding_small"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="@dimen/textsize_mid"
        android:textStyle="bold" />

    <ViewStub
        android:id="@+id/option_stub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dip"
        android:inflatedId="@+id/fb_picker_option"
        android:layout="@layout/layout_fb_picker_option" />

</LinearLayout><!-- From: file:/Volumes/MacWork/Bitbucket/t4fa_andstudio/T4Fa/t4F/src/main/res/layout-xhdpi/layout_listadapter.xml -->