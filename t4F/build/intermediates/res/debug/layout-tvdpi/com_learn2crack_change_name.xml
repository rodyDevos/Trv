<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_for_login">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Change your Player Name"
        android:textColor="@color/white"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView"
        android:text="Player Name"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/newname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:hint="Player Name"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btchangename"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:text="Change Name"
        android:textColor="#000000"
        android:textSize="13dp" />

    <Button
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:text="Cancel"
            android:id="@+id/btcancel"
            android:textColor="#000000"
            android:layout_alignTop="@+id/btchangename"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/btchangename"
            android:textSize="13dp"/>

    <TextView
        android:id="@+id/alertname"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btchangename"
        android:textColor="@color/white" />

</RelativeLayout><!-- From: file:/Volumes/MacWork/Bitbucket/t4fa_andstudio/T4Fa/t4F/src/main/res/layout-tvdpi/com_learn2crack_change_name.xml -->